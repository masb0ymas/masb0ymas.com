          {MY_NAME}
        </span>
      </h1>
      <p class="text-lg md:text-xl pb-4">{MY_POSITION}</p>
    </div>
  </div>

  <div class="mb-5">
    {
      socialMedias.map((item) => {
        return (
          <a
            class="unset text-xl mr-4 hover:text-text-link"
            href={item.link}
            target="_blank"
          >
            <i class={item.icon} aria-hidden="true" />
